# BFF Service Configuration
PAGEWRIGHT_BFF_PORT=8085

# Database
PAGEWRIGHT_DATABASE_URL=postgres://pagewright:pagewright@localhost:5432/pagewright?sslmode=disable

# Service URLs
PAGEWRIGHT_STORAGE_URL=http://localhost:8080
PAGEWRIGHT_MANAGER_URL=http://localhost:8081
PAGEWRIGHT_SERVING_URL=http://localhost:8083

# JWT Configuration
PAGEWRIGHT_JWT_SECRET=change-this-to-a-strong-random-secret-in-production
PAGEWRIGHT_JWT_EXPIRATION=15m

# Google OAuth
PAGEWRIGHT_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
PAGEWRIGHT_GOOGLE_CLIENT_SECRET=your-google-client-secret
PAGEWRIGHT_GOOGLE_REDIRECT_URL=http://localhost:8085/auth/google/callback

# OpenAI LLM
PAGEWRIGHT_LLM_KEY=sk-your-openai-api-key
PAGEWRIGHT_LLM_URL=https://api.openai.com/v1

# Pagination
PAGEWRIGHT_DEFAULT_PAGE_SIZE=25

# For docker-compose
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
OPENAI_API_KEY=sk-your-openai-api-key
