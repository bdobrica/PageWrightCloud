# PageWrightCloud Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# INFRASTRUCTURE
# =============================================================================

# PostgreSQL (Gateway Database)
POSTGRES_DB=pagewright
POSTGRES_USER=pagewright
POSTGRES_PASSWORD=pagewright

# Redis (Manager Queue)
# No password required for local development

# NFS (Storage Backend)
# No configuration required

# =============================================================================
# GATEWAY SERVICE (Port 8085)
# =============================================================================

GATEWAY_PORT=8085
JWT_SECRET=dev-secret-change-in-production
JWT_EXPIRATION=15m
DEFAULT_PAGE_SIZE=25

# Google OAuth (Required for OAuth login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8085/auth/google/callback

# OpenAI (Required for chat-based builds)
LLM_KEY=sk-your-openai-api-key
LLM_URL=https://api.openai.com/v1

# =============================================================================
# MANAGER SERVICE (Port 8081)
# =============================================================================

MANAGER_PORT=8081
LOCK_TTL=5m
LOCK_RENEW_INTERVAL=1m
WORKER_IMAGE=pagewright-worker:latest
WORKER_TIMEOUT=30m

# =============================================================================
# STORAGE SERVICE (Port 8080)
# =============================================================================

STORAGE_PORT=8080

# =============================================================================
# SERVING SERVICE (Port 8083)
# =============================================================================

SERVING_PORT=8083
MAX_VERSIONS_PER_SITE=10
NGINX_PORT=8084

# =============================================================================
# UI SERVICE (Port 3000)
# =============================================================================

UI_PORT=3000
API_URL=http://localhost:8085
WS_URL=ws://localhost:8085/ws
DEFAULT_DOMAIN=pagewright.dev

# =============================================================================
# WORKER SERVICE (Port 8082) - Optional, spawned by manager
# =============================================================================

WORKER_PORT=8082
WORKER_JOB={}
